<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/teamListItemTeamNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_holder"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/teamListItemPlayer1NameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/teamListItemTeamNameTextView"
        android:layout_alignTop="@+id/teamListItemTeamNameTextView"
        android:layout_marginLeft="30dp"
        android:layout_alignParentEnd="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/teamListItemPlayer2NameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/teamListItemTeamNameTextView"
        android:layout_alignBottom="@+id/teamListItemTeamNameTextView"
        android:layout_marginLeft="30dp"
        android:layout_alignParentEnd="true"
        android:text="TextView" />

</RelativeLayout>